# Enable kwm compatibility mode
khd kwm on

# set color of default mode
khd mode default color 0xFF5F8787

# Define prefix mode.
khd mode prefix prefix on
khd mode prefix timeout 0.35

# Define space mode.
khd mode space prefix on
khd mode space timeout 0.5

# Define resize mode.
khd mode resize prefix on
khd mode resize timeout 0.5

# Activate space mode
ctrl - s                 :    khd -e "mode activate space"

# Activate resize mode
0xa                      :    khd -e "mode activate resize"
alt - 0x32               :    khd -e "mode activate resize"

# Activate prefix mode (uses the ยง character)
0x32                     :    khd -e "mode activate prefix"

# Set Space Tiling Mode To BSP
cmd + ctrl - a           :    kwmc space -t bsp

# Set Space Tiling Mode To Monocle
cmd + ctrl - s           :    kwmc space -t monocle

# Set Space Tiling Mode To Floating
cmd + ctrl - d           :    kwmc space -t float

# Rotate Window-Tree By 90degrees (Clockwise)
cmd + ctrl - r           :    kwmc tree rotate 90

# Modify Container(s)
prefix - s               :    kwmc window -c split-mode toggle
resize - h               :    kwmc window -c expand 0.05 west
resize - j               :    kwmc window -c expand 0.05 south
resize - k               :    kwmc window -c expand 0.05 north
resize - l               :    kwmc window -c expand 0.05 east
resize + shift - h       :    kwmc window -c reduce 0.05 west
resize + shift - j       :    kwmc window -c reduce 0.05 south
resize + shift - k       :    kwmc window -c reduce 0.05 north
resize + shift - l       :    kwmc window -c reduce 0.05 east

# Set Temporary Window Container
ctrl - 0                 :    kwmc window -z fullscreen
prefix - d               :    kwmc window -z parent
prefix - w               :    kwmc window -t focused

# Mark Window
cmd + alt + ctrl - m     :    kwmc window -mk focused
cmd + alt + ctrl - h     :    kwmc window -mk west wrap
cmd + alt + ctrl - l     :    kwmc window -mk east wrap
cmd + alt + ctrl - j     :    kwmc window -mk south wrap
cmd + alt + ctrl - k     :    kwmc window -mk north wrap

# Give Focus To Window
prefix - h               :    kwmc window -f west
prefix - l               :    kwmc window -f east
prefix - j               :    kwmc window -f south
prefix - k               :    kwmc window -f north

# Give Focus To Screen
cmd + alt - 1            :    kwmc display -f 0
cmd + alt - 2            :    kwmc display -f 1
cmd + alt - 3            :    kwmc display -f 2

# Swap Focused Window
ctrl + alt - h           :    kwmc window -s west
ctrl + alt - j           :    kwmc window -s south
ctrl + alt - k           :    kwmc window -s north
ctrl + alt - l           :    kwmc window -s east
ctrl + alt - m           :    kwmc window -s mark

# Pseudo containers
cmd + ctrl + alt - p     :    kwmc tree -pseudo create
cmd + ctrl + alt - o     :    kwmc tree -pseudo destroy

# Detach Focused Window And Reinsert In Direction
ctrl + shift - k         :    kwmc window -m north
ctrl + shift - l         :    kwmc window -m east
ctrl + shift - j         :    kwmc window -m south
ctrl + shift - h         :    kwmc window -m west

# Move Focused Window To Space
ctrl + alt - left        :    kwmc window -m space left
ctrl + alt - right       :    kwmc window -m space right

# Move Focused Window To Screen
ctrl + alt - 1           :    kwmc window -m display 0
ctrl + alt - 2           :    kwmc window -m display 1
ctrl + alt - 3           :    kwmc window -m display 2

# Increase Container Gaps
prefix - x               :    kwmc space -g increase horizontal
prefix - y               :    kwmc space -g increase vertical

# Decrease Container Gaps
prefix + shift - x       :    kwmc space -g decrease horizontal
prefix + shift - y       :    kwmc space -g decrease vertical

# Increase Screen Padding
resize - left            :    kwmc space -p increase left
resize - right           :    kwmc space -p increase right
resize - up              :    kwmc space -p increase top
resize - down            :    kwmc space -p increase bottom
# prefix - p               :    kwmc space -p increase all

# Decrease Screen Padding
resize + shift - left    :    kwmc space -p decrease left
resize + shift - right   :    kwmc space -p decrease right
resize + shift - up      :    kwmc space -p decrease top
resize + shift - down    :    kwmc space -p decrease bottom
# prefix + shift - p     :    kwmc space -p decrease all

# ScratchPad
prefix - o               :    kwmc scratchpad add
prefix + shift - o       :    kwmc scratchpad remove
prefix - p               :    kwmc scratchpad toggle

# Space Traversing
prefix - 0x32      : kwmc space -fExperimental previous
space + ctrl - h   : kwmc space -fExperimental left
space + ctrl - l   : kwmc space -fExperimental right
ctrl - 1           : kwmc space -fExperimental 1
ctrl - 2           : kwmc space -fExperimental 2
ctrl - 3           : kwmc space -fExperimental 3
ctrl - 4           : kwmc space -fExperimental 4
ctrl - 5           : kwmc space -fExperimental 5
ctrl - 6           : kwmc space -fExperimental 6

# Override window-cycling
cmd - 0x32         : kwmc window -f next
cmd + shift - 0x32 : kwmc window -f prev

