config defaultToCurrentScreen true
config windowHintsShowIcons   true
# config menuBarIconHidden      true

# Corrects for my Mac's weird offset.
alias screenOriginX screenOriginX-4
alias screenSizeX   screenSizeX+4

# Abstract positions
alias full      move ${screenOriginX};screenOriginY ${screenSizeX};screenSizeY
alias lefthalf  move ${screenOriginX};screenOriginY screenSizeX/2;screenSizeY
alias righthalf move screenSizeX/2;screenOriginY screenSizeX/2+4;screenSizeY
alias center    move ${screenOriginX}+75;screenOriginY+75 screenSizeX-150;screenSizeY-150

#     name        act     w    h anchor
alias widenLeft   resize +10% +0 top-right
alias widenRight  resize +10% +0 top-left
alias shrinkLeft  resize -10% +0 top-left
alias shrinkRight resize -10% +0 top-right
alias moveLeft    nudge  -10% +0
alias moveRight   nudge  +10% +0

bind 0:ctrl         ${full}

bind ,:cmd,alt,ctrl ${lefthalf}
bind .:cmd,alt,ctrl ${righthalf}

bind n:cmd,alt,ctrl ${center}

bind [:cmd,alt,ctrl ${widenLeft}
bind ]:cmd,alt,ctrl ${widenRight}
bind [:shift,cmd,alt,ctrl ${shrinkLeft}
bind ]:shift,cmd,alt,ctrl ${shrinkRight}
bind -:cmd,alt,ctrl ${moveLeft}
bind =:cmd,alt,ctrl ${moveRight}

# Throw from screen to screen
bind 1:alt,ctrl throw 0
bind 2:alt,ctrl throw 1

# Center! (https://github.com/jigish/slate/issues/207)
bind c:ctrl,alt,cmd move screenOriginX+((screenSizeX-windowSizeX)/2);screenOriginY+((screenSizeY-windowSizeY)/2) windowSizeX;windowSizeY

# Reload .slate
bind r:ctrl,cmd relaunch
